<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Dashboard - Jewellery Shop</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-warning px-4">
    <a class="navbar-brand fw-bold text-white" href="#">Jewellery Shop Dashboard</a>
  </nav>

  <div class="container mt-4">

    <!-- Section 1: New Customer -->
    <div class="card mb-4 shadow-sm">
      <div class="card-header bg-light">
        <h5 class="mb-0 fw-bold">New Customer</h5>
      </div>
      <div class="card-body">
        <form>
          <div class="row g-3">
            <div class="col-md-4">
              <label class="form-label">Name</label>
              <input type="text" class="form-control" placeholder="Enter full name">
            </div>
            <div class="col-md-4">
              <label class="form-label">Mobile</label>
              <input type="text" class="form-control" placeholder="Enter mobile number">
            </div>
            <div class="col-md-4">
              <label class="form-label">Email</label>
              <input type="email" class="form-control" placeholder="Enter email">
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-warning mt-3">Add Customer</button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <!-- Section 2: Customer Details -->
    <div class="card mb-4 shadow-sm">
      <div class="card-header bg-light">
        <h5 class="mb-0 fw-bold">Customer Details</h5>
      </div>
      <div class="card-body">
        <p>Display list of existing customers here (table or search result).</p>
        <!-- You can later integrate a table here -->
      </div>
    </div>

    <!-- Section 3: Voice Generator -->
    <div class="card mb-4 shadow-sm">
      <div class="card-header bg-light">
        <h5 class="mb-0 fw-bold">Voice Generator</h5>
      </div>
      <div class="card-body">
        <textarea id="textToSpeak" class="form-control mb-3" rows="3" placeholder="Type your message here..."></textarea>
        <button class="btn btn-warning" onclick="speakText()">Generate Voice</button>
      </div>
    </div>

    <!-- Section 4: Invoice History -->
    <div class="card mb-4 shadow-sm">
      <div class="card-header bg-light">
        <h5 class="mb-0 fw-bold">Invoice History</h5>
      </div>
      <div class="card-body">
        <p>Invoice records will be listed here.</p>
        <!-- Example table (can be dynamic later) -->
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>Invoice No</th>
              <th>Date</th>
              <th>Customer</th>
              <th>Total</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>#1001</td>
              <td>2025-07-18</td>
              <td>Jessy</td>
              <td>â‚¹12,500</td>
            </tr>
            <!-- Add more rows dynamically -->
          </tbody>
        </table>
      </div>
    </div>

  </div>

  <script>
    function speakText() {
      const text = document.getElementById('textToSpeak').value;
      if (text.trim() === '') return;
      const utterance = new SpeechSynthesisUtterance(text);
      window.speechSynthesis.speak(utterance);
    }
  </script>

</body>
</html>
